<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MostrarResposta">

    <TextView
        android:id="@+id/textView_pontos"
        android:layout_width="351dp"
        android:layout_height="32dp"
        android:layout_marginTop="100dp"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_pontos2"
        android:layout_width="351dp"
        android:layout_height="32dp"
        android:layout_marginTop="116dp"
        android:fadingEdgeLength="20sp"
        android:text="Sobraram:"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_palavra" />

    <TextView
        android:id="@+id/textView_palavra"
        android:layout_width="331dp"
        android:layout_height="57dp"
        android:layout_marginTop="28dp"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_pontos" />

    <TextView
        android:id="@+id/textView_sobra"
        android:layout_width="353dp"
        android:layout_height="313dp"
        android:layout_marginTop="16dp"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_pontos2" />
</androidx.constraintlayout.widget.ConstraintLayout>